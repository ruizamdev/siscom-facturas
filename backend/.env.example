# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret
JWT_SECRET=your-secret-key-change-in-production

# Database Configuration (SQLite - Local)
# Database file path is defined in backend/config/database.js

# ContPAQi SQL Server Configuration
CONTPAQI_DB_SERVER=your-zerotier-ip-or-cloudflare-tunnel
CONTPAQI_DB_PORT=1433
CONTPAQI_DB_DATABASE=your-contpaqi-database-name
CONTPAQI_DB_USER=your-sql-user
CONTPAQI_DB_PASSWORD=your-sql-password
CONTPAQI_DB_ENCRYPT=true
CONTPAQI_DB_TRUST_CERT=true

# Facturama API Configuration
FACTURAMA_API_URL=https://api.facturama.mx
FACTURAMA_USER=your-facturama-user
FACTURAMA_PASSWORD=your-facturama-password

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
